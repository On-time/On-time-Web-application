@model OnTimeWebApplication.Models.Subject

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Subject</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Section" />
        <div class="form-group">
            <label asp-for="LateTime" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="LateTime" class="form-control" />
                <span asp-validation-for="LateTime" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AbsentTime" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AbsentTime" class="form-control" />
                <span asp-validation-for="AbsentTime" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="UseComeAbsent" />
                    <label asp-for="UseComeAbsent"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Lecturer.FullName" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="LecturerId" class="form-control" asp-items="ViewBag.LecturerId"></select>
                <span asp-validation-for="LecturerId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="SubjectList">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
