@model OnTimeWebApplication.Models.SubjectViewModels.CreateSubjectViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<form asp-action="CreateSubject">
    <div class="form-horizontal">
        <h4>Subject</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Id" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Section" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Section" class="form-control" />
                <span asp-validation-for="Section" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LateTime" class="col-md-2 control-label"></label>
            <div class="col-md-3">
                <input asp-for="LateTime" class="form-control" />
                <span asp-validation-for="LateTime" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AbsentTime" class="col-md-2 control-label"></label>
            <div class="col-md-3">
                <input asp-for="AbsentTime" class="form-control" />
                <span asp-validation-for="AbsentTime" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="UseComeAbsent" />
                    <label asp-for="UseComeAbsent"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LecturerId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="LecturerId" class ="form-control" asp-items="ViewBag.LecturerId"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="SubjectList">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
