@model IEnumerable<OnTimeWebApplication.Models.Subject>

@{
    ViewData["Title"] = "Subject list";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Subject list</h2>

<p>
    <a asp-action="Create">Create subject</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lecturer.FullName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lecturer.FullName)
            </td>
            <td>
                @Html.ActionLink("Add study time", "AddSubjectTime", new { Id = item.Id, Section = item.Section }) |
                @Html.ActionLink("Edit", "Edit", new { Id = item.Id, Section = item.Section }) |
                @Html.ActionLink("Details", "Details", new { Id = item.Id, Section = item.Section }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
